<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.dlehd.gazuua.Chat.ChatroomList_item">

    <ImageView
        android:id="@+id/iv_friendProfile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/homebutton" />

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_FriendName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="name" />
        <TextView
            android:id="@+id/tv_LastMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="msg" />
        <TextView
            android:id="@+id/tv_Roomid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="msg" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_newmessageicon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/newimageicon" />

</LinearLayout>
